<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="za.co.itlab.cashdispense.CoinDispenseBreakDownActivity">

    <TextView
        android:id="@+id/denominationTextView"
        android:text="@string/cash_break_down"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/denominations"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        style="@android:style/TextAppearance.Small"
        android:layout_below="@+id/denominationTextView">
    </TextView>
    <TextView
        android:id="@+id/totaltextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/TextAppearance.Medium"
        android:text="@string/total"
        android:layout_below="@+id/denominations">
    </TextView>
    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/TextAppearance.Medium"
        android:layout_alignBaseline="@+id/totaltextview"
        android:layout_toRightOf="@+id/totaltextview"
        android:text="000000">
    </TextView>

</RelativeLayout>
